{
  "name": "znarkhalil/rolzmaf",
  "description": "A mini PHP Framework",
  "version": "1.0.0",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Znar Khalil",
      "email": "znar.khalil@gmail.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.86",
    "phpunit/phpunit": "^12.1"
  },
  "minimum-stability": "stable",
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "fix": "php-cs-fixer fix --config=.php-cs-fixer.php",
    "fix:dry": "php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
    "fix:ci": "php-cs-fixer fix --config=.php-cs-fixer.php --using-cache=no --dry-run",
    "test": "vendor/bin/phpunit --configuration phpunit.xml --colors=always"
  }
}
